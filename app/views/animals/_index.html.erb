<% @animals.each do |animal| %>
  <tr>
    <td><%= animal.nom %></td>
    <td>
    <% if animal.foto.url.nil? %>
      <%= image_tag("/uploads/animal/foto/default/template.png", width: 40, height: 40) %>
    <% else %>
      <%= image_tag(animal.foto.url, width: 40, height: 40) %>
    <% end %>
    </td>
    <td><%= animal.raza %></td>
    <td><%= animal.zona.nom %></td>
    <td><%= animal.any_naixement %></td>
    <td>user</td>
    <td><%= link_to "Edit", edit_animal_path(animal), remote: true, class: "btn btn-default" %></td>
    <td><%= link_to "Delete", animal_path(animal), remote: true, class: "btn btn-danger" %></td>
  </tr>
<% end %>
