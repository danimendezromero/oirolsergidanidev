<%= form_with(model: animal, local: true) do |form| %>
  <% if animal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(animal.errors.count, "error") %> prohibited this animal from being saved:</h2>

      <ul>
      <% animal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nom %>
    <%= form.text_field :nom, id: :animal_nom %>
  </div>

  <div class="field">
    <%= form.label :raza %>
    <%= form.text_field :raza, id: :animal_raza %>
  </div>
  <% if form.object.persisted? %>
  <% else %>
    <div class="field">
      <%= form.label :zona_id %>
      <%= form.select :zona_id, @zonas.collect { |zona| [zona.nom, zona.id]} %>
    </div>
  <% end %>


  <div class="field">
    <%= form.label :any_naixement %>
    <%= form.date_select :any_naixement, id: :animal_any_naixement %>
  </div>

  <% if form.object.persisted? %>
    <% if animal.foto.url.present? %>

    <%= image_tag( animal.foto.url, width: 100, height: 100) %>

    <div class="field">

      <%= form.label :remove_foto, style: "display: inline" %>

      <%= form.check_box :remove_foto %>

    </div>

  <% end %>
  <%= form.file_field :foto %>

  <%= form.hidden_field :foto_cache %>
  <% else %>
  <div class="field">
    <%= form.label :foto do %>

  <%= form.file_field :foto %>

  <%= form.hidden_field :foto_cache %>

  <% end %>
  </div>

  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
